{
  "manifest_version": 2,
  "name": "Google Translate",
  "description": "translate as a pop!",
  "version": "1.0",
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": false
  }
}
